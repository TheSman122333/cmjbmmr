---
import Layout from '../layouts/Layout.astro';
---

<Layout title="References - Black Maternal Mortality ">
	<h2>References</h2>
			<div class="content">
				<img src="/images/source.png" alt={`Dinner (scene 1)`} class="float-img" />
			</div>
</Layout>

<style>
	h1{
		color: rgb(var(--red));
	}
	h2{
		color: rgb(var(--brun-light));
	}
	h3{
		color: rgb(var(--accent-dark));
	}
	h4{
		color: rgb(var(--light-brun));
	}
	.content {
		margin-top: 1rem;
		line-height: 1.6;
	}
	.float-img {
		float: left;
		margin: 0 15px 10px 0;
		border-radius:5%;
	} 
	.content {
		overflow: hidden;
	}
	.navigation {
		margin-top: 2rem;
		display: flex;
		justify-content: space-between;
	}
	.nav-button {
		padding: 0.5rem 1rem;
		background-color: rgb(var(--red));
		color: white;
		text-decoration: none;
		border-radius: 4px;
	}
	.nav-button:hover {
		background-color: rgb(var(--accent-dark));
	}
	.prev {
		margin-right: auto;
	}
	.next {
		margin-left: auto;
	}
	.flashcard-container {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
	}
	.quiz-calculator-container {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		margin-top: 2rem;
	}
	.quiz-section, .calculator-section {
		flex: 1;
		min-width: 300px;
	}
	.calculator-container {
		margin-top: 1rem;
		width: 100%;
	}
	@media (max-width: 768px) {
		.quiz-calculator-container {
			flex-direction: column;
		}
	}
	table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
</style>